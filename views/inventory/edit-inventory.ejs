<div class="add-inventory-container">

    <div class="add-inv-title">
        <h1><%- title %></h1>
    </div>

    <div class="spacing">
        <!-- Message Block -->
        <%- messages() %> <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        <% } %>
    </div>
    <div class="spacing">
        <form class="add-vehicle-form" action="/inv/update" method="post" id="updateForm">
            <div class="inv-form-group">
                <label for="classification_id">Select Classification </label>
                <%- classificationList %>
            </div>

            <div class="inv-form-group">
                <label for="inv_make">Make</label>
                <input type="text" class="inv-form-control" id="inv_make" name="inv_make"
                       required value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>">
            </div>

            <div class="inv-form-group">
                <label for="inv_model">Model</label>
                <input type="text" class="inv-form-control" id="inv_model" name="inv_model"
                       required value="<%= inv_model || '' %>">
            </div>

            <div class="inv-form-group">
                <label for="inv_description">Description</label>
                <textarea class="inv-form-control" id="inv_description" name="inv_description"
                          required><%= inv_description || '' %></textarea>
            </div>

            <div class="inv-form-group">
                <label for="inv_image">Image Path</label>
                <input type="text" class="inv-form-control" id="inv_image" name="inv_image"
                       value="<%= inv_image || '/images/vehicles/no-image.png' %>">
            </div>

            <div class="inv-form-group">
                <label for="inv_thumbnail">Thumbnail Path</label>
                <input type="text" class="inv-form-control" id="inv_thumbnail" name="inv_thumbnail"
                       value="<%= inv_thumbnail || '/images/vehicles/no-image-tn.png' %>">
            </div>

            <div class="inv-form-group">
                <label for="inv_price">Price</label>
                <input type="number" class="inv-form-control" id="inv_price" name="inv_price"
                       required step="0.01" min="0" value="<%= inv_price || '' %>">
            </div>

            <div class="inv-form-group">
                <label for="inv_year">Year</label>
                <input type="number" class="inv-form-control" id="inv_year" name="inv_year"
                       required min="1900" max="<%= new Date().getFullYear() + 1 %>"
                       value="<%= inv_year || '' %>">
            </div>

            <div class="inv-form-group">
                <label for="inv_miles">Miles</label>
                <input type="number" class="inv-form-control" id="inv_miles" name="inv_miles"
                       required min="0" value="<%= inv_miles || '' %>">
            </div>

            <div class="inv-form-group">
                <label for="inv_color">Color</label>
                <input type="text" class="inv-form-control" id="inv_color" name="inv_color"
                       required value="<%= inv_color || '' %>">
            </div>

            <div class="add-vehicle-btn">
                <button type="submit" name="submit" class="btn btn-primary" disabled>Update Vehicle</button>
            </div>


            <input type="hidden" name="inv_id"
            <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                    <% } %>>
        </form>
    </div>
</div>