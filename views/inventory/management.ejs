<div class="inv-management-container">
    <h1> <%- title %></h1>

    <div class="spacing">
        <div class="alert alert-danger">
            <!-- Message Block -->
            <%- messages() %> <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error => { %>
                        <li><%= error.msg %></li>
                    <% }) %>
                </ul>
            <% } %>
        </div>
    </div>
    <div class="management-links">
            <span> <a href="/inv/add-classification" class="btn">Add new classification</a> </span>
            <span> <a href="/inv/add-inventory" class="btn">Add new inventory</a> </span>
    </div>

    <div class="spacing">

        <div class="inv-management">
            <h2>Manage Inventory</h2>
            <p class="classification-p">Select a classification to see those inventory items.</p>

            <%- classificationSelect %>

            <div class="inventory-table">
                <table id="inventoryDisplay" class="inventoryDisplay"></table>
            </div>

        </div>
    </div>


    <noscript>Javascript must be enabled to use this page.</noscript>

    <script src="../../js/inventory.js"></script>
</div>