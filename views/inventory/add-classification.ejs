<div class="add-classification-container">

    <div class="classification-title">
        <h1><%- title %></h1>
    </div>

    <% if (messages.error) { %>
        <div class="alert alert-danger"><%= messages.error %></div>
    <% } %>
    <% if (errors) { %>
        <div class="alert alert-danger">
            <ul>
                <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>

    <form class="add-classification-form" action="/inv/add-classification" method="POST">
        <div class="form-group">
            <label for="classification_name">Classification Name</label>
            <input type="text" class="classification-input" id="classification_name" name="classification_name"
                   required pattern="^[a-zA-Z0-9]+$"
                   title="No spaces or special characters allowed">
            <small class="form-text text-muted">No spaces or special characters allowed</small>
        </div>
        <button type="submit" class="btn btn-primary">Add Classification</button>
    </form>


</div>