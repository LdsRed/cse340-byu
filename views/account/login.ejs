<div class="login-container">
    <h2> <%- title %></h2>
    
    <form class="login-form" action="/login" method="POST">
        <div class="form-line-division">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" placeholder="Email Address" id="email" name="account_email" required>
            </div>
            <div class="form-group">
                <label for="account_password">Password:</label>
                <div class="password-container">
                    <input type="password" placeholder="Password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
                    <span class="password-toggle">
                        <img src="/images/eye-close.png" id="eyeicon">
                    </span>
                </div>
            </div>
            <% if (locals.error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>
            <div class="login-btn">
                <button type="submit" id="submitBtn">Login</button>
            </div>
            <div class="form-footer">
                <p>Don't have an account? <a href="/account/register">Register here</a></p>
            </div>
        </div>
    </form>
    
</div>